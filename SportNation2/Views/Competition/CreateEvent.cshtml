@model SportNation2.Models.AddCompetitionEventViewModel

@{
    ViewData["Title"] = "Create Event";
}

<h1>Créer une nouvelle épreuve</h1>

<h2>@Model.CompetitionName</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CompetitionId" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinAge" class="control-label"></label>
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAge" class="control-label"></label>
                <input asp-for="MaxAge" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxParticipants" class="control-label"></label>
                <input asp-for="MaxParticipants" class="form-control" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>
            <label asp-for="Genres" class="control-label"></label>
            <select class="form-select" aria-label="Choisir dans la liste" id="genre" name="genre">
                <option selected>Open this select menu</option>
                @foreach (var item in Model.Genres)
                {
                    <option value="@item">@item</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Epreuves</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CompetitionEvents)
                {
                    <tr>
                        <th scope="row"></th>
                        <td>@item</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
