
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span> Hello @User.Identity?.Name!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="account" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="get">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-action="CreateUser" asp-controller="account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-action="Login" asp-controller="account">Login</a>
        </li>
    }
</ul>